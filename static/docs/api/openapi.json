  "paths": {
    "/currencies": {
      "get": {
        "tags": [
          "currencies"
        ],
        "summary": "currencies",
        "description": "Returns list of available currencies",
        "operationId": "getcurrencies",
        "responses": {
          "200": {
            "description": "currencies list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Currency symbol",
                        "example": "USD"
                      },
                      "precision": {
                        "type": "integer",
                        "description": "Currency precision as number of decimal points",
                        "example": 2
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error"
          }
        }
      }
    }
  }
