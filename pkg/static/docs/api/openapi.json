{
  "openapi": "3.0.2",
  "info": {
    "description": "# Introduction\nThis API is {cumented in **OpenAPI 3.0 format**.\n\nThis API the following operations:\n* Retrieve a list of available instruments \n* Retrieve a list of executed trades\n\n\n# Basics\n* API calls have to be secured with HTTPS.\n* All data has to be submitted UTF-8 encoded.\n* The reply is sent JSON encoded.\n",
    "version": "1.0.0",
    "title": "OPEN OUTCRY API"
  },
  "security": [
    {
      "basicAuth": []
    }
  ],
  "servers": [
    {
      "url": "https://your.public.url"
    }
  ],
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "paths": {
    "/currencies": {
      "paths": {
        "/": {
          "get": {
            "tags": [
              "currencies"
            ],
            "summary": "currencies list",
            "description": "Returns list of available currencies",
            "operationId": "getCurrencies",
            "responses": {
              "200": {
                "description": "currencies list",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "array",
                      "description": "List of currencies supported by app",
                      "items": {
                        "type": "object",
                        "description": "Currency of payment account",
                        "properties": {
                          "name": {
                            "type": "string",
                            "description": "ISO 4217 Currency symbol",
                            "example": "USD"
                          },
                          "precision": {
                            "type": "integer",
                            "description": "Currency precision as number of decimal points",
                            "example": 2
                          }
                        }
                      }
                    }
                  }
                }
              },
              "500": {
                "description": "Error"
              }
            }
          }
        }
      }
    },
    "/instruments": {
      "get": {
        "tags": [
          "instruments"
        ],
        "summary": "instrument list",
        "description": "Returns list of available instruments",
        "operationId": "getInstruments",
        "responses": {
          "200": {
            "description": "instruments list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "name": {
                        "type": "string",
                        "description": "Ticker-like name of the instrument. For monetary instruments, a currency pair is used."
                      },
                      "base_currency": {
                        "type": "string",
                        "description": "ISO 4217 Currency symbol",
                        "example": "USD"
                      },
                      "quote_currency": {
                        "type": "string",
                        "description": "ISO 4217 Currency symbol",
                        "example": "USD"
                      },
                      "enabled": {
                        "type": "boolean",
                        "description": "Availability for trading"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error"
          }
        }
      }
    },
    "/order_books/{instrument_name}": {
      "get": {
        "tags": [
          "order_books"
        ],
        "summary": "get order books",
        "description": "Return an order book for an instrument",
        "operationId": "getOrderBook",
        "parameters": [
          {
            "in": "path",
            "name": "instrument_name",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Ticker-like name of the instrument. For monetary instruments, a currency pair is used."
            }
          }
        ],
        "responses": {
          "200": {
            "description": "order book",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sell": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "price": {
                            "type": "number"
                          },
                          "volume": {
                            "type": "number"
                          }
                        }
                      }
                    },
                    "buy": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "price": {
                            "type": "number"
                          },
                          "volume": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error"
          }
        }
      }
    },
    "/trades": {
      "get": {
        "tags": [
          "trades"
        ],
        "summary": "trades list",
        "description": "Returns list of user's trades",
        "operationId": "getTrades",
        "responses": {
          "200": {
            "description": "trades list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "description": "List of executed trades",
                  "items": {
                    "type": "object",
                    "description": "Execute trade",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error"
          }
        }
      }
    },
    "/trade_orders": {
      "get": {
        "tags": [
          "trade_order"
        ],
        "summary": "trade order list",
        "description": "Returns list of user's active trade orders",
        "operationId": "getTradeOrders",
        "responses": {
          "200": {
            "description": "trades orders list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "instrument": {
                        "type": "string",
                        "description": "Ticker-like name of the instrument. For monetary instruments, a currency pair is used."
                      },
                      "side": {
                        "type": "enum - SELL - BUY"
                      },
                      "timeInForce": {
                        "type": "enum - GTC - IOC - FOK - GTD - GTT"
                      },
                      "status": {
                        "type": "enum - OPEN - REJECTED - CANCELLED"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error"
          }
        }
      }
    }
  }
}
